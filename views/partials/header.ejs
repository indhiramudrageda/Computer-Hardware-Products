<html>
	<head>
		<title>Newegg</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="../../stylesheets/style.css" />
		<link rel="stylesheet" href="../../assets/css/main.css" />
		<script type="text/javascript" src="../../javascripts/app-main.js"></script>
		<noscript><link rel="stylesheet" href="../../assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<header id="header">
					<h1 id="logo"><a href="/">Newegg</a></h1> 
					<nav id="nav" class="navbar">
						<ul>
							<li>
								<form class="form-inline" action="/products">
    								<input class="form-control mr-sm-2" id="search" type="text" placeholder="Search" aria-label="Search">
  								</form>
								
							</li>
							<li>
								<%if(typeof user != "undefined"){%>
									<span>Welcome, <%= firstName %></span>
									<ul>
									<li><a href="/orderHistory">Order History</a></li>
									<li><a href="/logout">Logout</a></li>
									</ul>
								<%}%>
								<%if(typeof user == "undefined"){%>
									<a href="/login" class="button primary">Sign In/Register</a>
								<%}%>
							</li>
							<li><a href="/cart">Cart</a></li>
						</ul>
					</nav>
				</header>
						