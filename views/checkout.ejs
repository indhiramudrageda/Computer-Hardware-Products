<%- include ('partials/header') %>
<div class="container">
<form method="POST" action="/completeOrder">
	<% products.forEach(function(product){ %>
		<input type="hidden" value="<%= product %>" name="productID"/>
	<% }); %> 
	<% quantities.forEach(function(quantity){ %>
			<input type="hidden" value="<%= quantity %>" name="quantity"/>
	<% }); %>
	<% prices.forEach(function(price){ %>
			<input type="hidden" value="<%= price %>" name="price"/>
	<% }); %>


	<div id="signup" class="row">
		<div class="col-2 col-12-medium imp-medium">
		</div>
		<div class="col-8 col-12-medium imp-medium aln-center aln-middle">
			<div class="row">
				<h4>SHIPPING ADDRESS</h4>
			</div>
			<div class="row">
				<div class="col-6">
					<label for="FirstName">First Name</label>
					<input type="text" title="First Name" id="FirstName" name="FirstName" data-type="fname" required>
					<span class="FirstName-error-message error-message" for="FirstName" style="display: none;"></span>
				</div>
				<div class="col-6">
					<label for="LastName">Last Name</label>
					<input type="text" title="Last Name" id="LastName" name="LastName" data-type="lname" required>
					<span class="LastName-error-message error-message" for="LastName" style="display: none;"></span>
				</div>
			</div>
			</br>
			<div class="row">
				<div class="col-12">
					<label for="StreetAddress">Street Address</label>
					<input type="text" title="StreetAddress" id="StreetAddress" name="StreetAddress" data-type="address" required>
					<span class="StreetAddress-error-message error-message" for="StreetAddress" style="display: none;"></span>
				</div>
			</div>
			</br>
			<div class="row">
				<div class="col-4">
					<label for="City">City</label>
					<input type="text" title="City" id="City" name="City" data-type="city" required>
					<span class="City-error-message error-message" for="City" style="display: none;"></span>
				</div>
				<div class="col-4">
					<label for="State">State</label>
					<select name="State" id="State" required>
					  <option value="" selected="selected">Select a State</option>
					  <option value="AL">Alabama</option>
					  <option value="AK">Alaska</option>
					  <option value="AZ">Arizona</option>
					  <option value="AR">Arkansas</option>
					  <option value="CA">California</option>
					  <option value="CO">Colorado</option>
					  <option value="CT">Connecticut</option>
					  <option value="DE">Delaware</option>
					  <option value="DC">District Of Columbia</option>
					  <option value="FL">Florida</option>
					  <option value="GA">Georgia</option>
					  <option value="HI">Hawaii</option>
					  <option value="ID">Idaho</option>
					  <option value="IL">Illinois</option>
					  <option value="IN">Indiana</option>
					  <option value="IA">Iowa</option>
					  <option value="KS">Kansas</option>
					  <option value="KY">Kentucky</option>
					  <option value="LA">Louisiana</option>
					  <option value="ME">Maine</option>
					  <option value="MD">Maryland</option>
					  <option value="MA">Massachusetts</option>
					  <option value="MI">Michigan</option>
					  <option value="MN">Minnesota</option>
					  <option value="MS">Mississippi</option>
					  <option value="MO">Missouri</option>
					  <option value="MT">Montana</option>
					  <option value="NE">Nebraska</option>
					  <option value="NV">Nevada</option>
					  <option value="NH">New Hampshire</option>
					  <option value="NJ">New Jersey</option>
					  <option value="NM">New Mexico</option>
					  <option value="NY">New York</option>
					  <option value="NC">North Carolina</option>
					  <option value="ND">North Dakota</option>
					  <option value="OH">Ohio</option>
					  <option value="OK">Oklahoma</option>
					  <option value="OR">Oregon</option>
					  <option value="PA">Pennsylvania</option>
					  <option value="RI">Rhode Island</option>
					  <option value="SC">South Carolina</option>
					  <option value="SD">South Dakota</option>
					  <option value="TN">Tennessee</option>
					  <option value="TX">Texas</option>
					  <option value="UT">Utah</option>
					  <option value="VT">Vermont</option>
					  <option value="VA">Virginia</option>
					  <option value="WA">Washington</option>
					  <option value="WV">West Virginia</option>
					  <option value="WI">Wisconsin</option>
					  <option value="WY">Wyoming</option>
					</select>
					<!-- <input type="text" title="State" id="State" name="State" data-type="state" required> -->
					<span class="State-error-message error-message" for="State" style="display: none;"></span>
				</div>
				<div class="col-4">
					<label for="ZipCode">ZipCode</label>
					<input type="text" title="Enter a valid zipcode: 12345" id="ZipCode" pattern="[0-9]{5}" name="ZipCode" data-type="ZipCode" required>
					<span class="ZipCode-error-message error-message" for="City" style="display: none;"></span>
				</div>
			</div>
			</br>
			<div class="row">
				<div class="col-6">
					<label for="Phone">Phone</label>
					<input type="text" title="Enter a valid phone number: 9196123101" id="Phone" name="Phone" data-type="phone" pattern="[0-9]{10}" required>
					<span class="Phone-error-message error-message" for="Phone" style="display: none;"></span>
				</div>
			</div>
			</br>
			
			</br>
			<div class="row">
				<div class="col-12">
				<button type="submit" class="button primary" style="float:right">COMPLETE ORDER</button>
				</div>
			</div>
			</br></br>
		</div>
		<div class="col-2 col-12-medium imp-medium"></div>
	</div>
</form>
</div>

<%- include ('partials/footer') %>