<%- include ('partials/header') %>
<!-- <%- include ('partials/banner') %> -->
<%- include ('partials/sidebar') %>
			<div class="col-8 col-12-medium imp-medium">
				<div class="container">
					<div name="row1" class="row">
						<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
							<ol class="carousel-indicators">
								<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
								<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
								<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
							</ol>
							<div class="carousel-inner" style=" width:100%; height: 350px !important;">
								<div class="carousel-item active">
								<img class="d-block w-100" src="/images/carousel2.jpg" alt="First slide" style="width:640px; height:360px;">
								</div>
								<div class="carousel-item">
								<img class="d-block w-100" src="/images/carousel1.jpg" alt="Second slide" style="width:640px; height:360px;">
								</div>
								<div class="carousel-item">
								<img class="d-block w-100" src="/images/carousel3.jpg" alt="Third slide" style="width:640px; height:360px;">
								</div>
							</div>
							
						</div>
					</div>
					
					<hr/>
					<h3 style="text-align: center;">Featured Products</h3>
					<div class="row">
						<% product.forEach(function(product){ %>
						<div class="sm-col-3">
							<div class="card" style="width: 18rem;">
								<img class="card-img-top" src="<%= product.image %>" alt="Card image cap">
								<div class="card-body">
									<h5 class="card-title" style="color: black;"><%= product.name %></h5>
									<h4 class="card-title" style="color: black;">$<%= product.price %></h5>
									<p class="card-text" style="color: black;"><%= product.Description %></p>
									
									<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" style="display: flex;align-items: center; justify-content: center">
									<div class="btn-group mr-2" role="group" aria-label="First group">
										<button type="button" class="btn btn-success">Add to cart</button>
									</div>
									<div class="btn-group mr-2" role="group" aria-label="Second group">
										<button type="button" class="btn btn-warning" href="#">Update</button>
									</div>
									</div>
								</div>
								</div>
						</div>
						<% }); %>
					</div>
				</div>
			</div>
<%- include ('partials/sidebar-footer') %>
<%- include ('partials/footer') %>

